{
    "manifest_version": 3,
    "name": "Google Maps レビュー信頼度分析",
    "version": "1.0.0",
    "description": "Google Mapsのレビューの信頼性を分析し、サクラレビューの可能性を判定します",

    "permissions": ["storage", "activeTab", "tabs"],

    "host_permissions": [
        "https://www.google.com/*",
        "https://maps.google.com/*",
        "https://google.com/*",
        "https://www.google.co.jp/*",
        "https://maps.google.co.jp/*",
        "https://google.co.jp/*",
        "https://www.google.co.uk/*",
        "https://maps.google.co.uk/*",
        "https://www.google.de/*",
        "https://maps.google.de/*",
        "https://www.google.fr/*",
        "https://maps.google.fr/*",
        "https://www.google.ca/*",
        "https://maps.google.ca/*",
        "https://www.google.com.au/*",
        "https://maps.google.com.au/*"
    ],

    "background": {
        "service_worker": "background.js"
    },

    "content_scripts": [
        {
            "matches": [
                "https://www.google.com/maps/*",
                "https://maps.google.com/*",
                "https://google.com/maps/*",
                "https://www.google.co.jp/maps/*",
                "https://maps.google.co.jp/*",
                "https://google.co.jp/maps/*",
                "https://www.google.co.uk/maps/*",
                "https://maps.google.co.uk/*",
                "https://www.google.de/maps/*",
                "https://maps.google.de/*",
                "https://www.google.fr/maps/*",
                "https://maps.google.fr/*",
                "https://www.google.ca/maps/*",
                "https://maps.google.ca/*",
                "https://www.google.com.au/maps/*",
                "https://maps.google.com.au/*"
            ],
            "js": ["content.js"],
            "css": ["styles/content.css"],
            "run_at": "document_end"
        }
    ],

    "action": {
        "default_popup": "popup.html",
        "default_title": "レビュー信頼度分析",
        "default_icon": {
            "16": "icons/icon16.png",
            "32": "icons/icon32.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },

    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },

    "web_accessible_resources": [
        {
            "resources": [
                "shared/*.js",
                "content/**/*.js",
                "popup/**/*.js",
                "background/*.js",
                "styles/*.css"
            ],
            "matches": [
                "https://www.google.com/*",
                "https://maps.google.com/*",
                "https://google.com/*",
                "https://www.google.co.jp/*",
                "https://maps.google.co.jp/*",
                "https://google.co.jp/*",
                "https://www.google.co.uk/*",
                "https://maps.google.co.uk/*",
                "https://www.google.de/*",
                "https://maps.google.de/*",
                "https://www.google.fr/*",
                "https://maps.google.fr/*",
                "https://www.google.ca/*",
                "https://maps.google.ca/*",
                "https://www.google.com.au/*",
                "https://maps.google.com.au/*"
            ]
        }
    ]
}
